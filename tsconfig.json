{
  "compilerOptions": {
    "target": "ES2020",                         
    "module": "commonjs",
    "moduleResolution": "node",                       
    "rootDir": "src",                          
    "outDir": "dist",                          
    "strict": true,                            
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
